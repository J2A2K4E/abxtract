@media (max-device-width: 600px){
    body {font-size:16px;}
    html {font-size:16px;}
    .container-fluid{padding:0 !important;}
}

/* Notif panel */
.notif-on{color:#2cc891 !important;font-weight:bold;}
.reply-container{display:flex;flex-direction:row;padding: 10px 12px 0 12px;}
.reply-avatar{align-items:center;display:flex;flex-direction:column;height:50px;width:50px;margin: 0 10px 0 0;}
.reply-text{display: flex;flex-direction:column;justify-content:space-around;width: 100%;}

/* footer settings */
.footer-container{padding-top:10px;border-top: 1px solid #ccd3dc;box-shadow:0 0px 10px 0px rgba(0,0,0,.1) !important;}
.footer-row{margin:0 auto !important;padding: 0;max-width:1000px !important;}
.footer-header{margin:1rem 0 .7rem 0;color:#ccd3dc;font-size:14px;font-weight:500;letter-spacing:0.5px;color:#9fa1a7;}
.footer-link{margin-bottom:.5rem;color:#333;width:auto;display:block;font-size:14px;font-weight:400;transition:color 0.1s ease-in-out 0s, opacity;}
.footer-link:hover{color:#2cc891;text-decoration:none !important;}
.footer-trademark{padding:20px 15px;font-size:12px;font-weight:400;letter-spacing: 0.5px;color:#9fa1a7;}

/* register form settings */
.register-form{display:block;width:60%;}
.register-footer{margin-top:10px;}
.register-desc{display:block;width:40%;text-align:center;padding:20px 20px 0 10px;color:#929292;font-size:0.9em;}
.register-footer{display: block !important;}
.loginLink{color:#25a77a;}

/* navbar settings */
.nav-margin-right{margin-right:15px !important;}
.nav-margin-left{margin-left:5px !important;}
nav.navbar{
    box-shadow: 0 0px 10px 0px rgba(0,0,0,.1) !important;
}
.navbar-brand{color:#2cc891 !important;}
.nav-link{
    color:#17191d;
    letter-spacing: 0.03em;
    font-size: 14px;
    font-weight: 500;
    transition: color 0.1s ease-in-out 0s, opacity;
}
.nav-link:hover{color:#2cc891 !important;}
.alert{position:fixed;display:block;top:65px;right:10px;z-index:999;width:300px;box-shadow: 0 0px 10px 0px rgba(0,0,0,.1);}
/* margin:10px 20px 10px 0; */

/* Change bootstrap and other default settings */
a{color:#272727;cursor:pointer;}
a:hover{color:#2cc891;text-decoration:none;}
.link-nohover:hover{text-decoration: none !important;color: inherit !important;}
.btn-success{background-color:#2cc891;border-color:#2cc891;}
.btn-success:hover{background-color:#25a77a;border-color:#25a77a;}
.btn-border{color:#2cc891;border-color:#2cc891;}
.form-control:focus{border-color:#2cc891;outline:0;-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(44,200,145,.6);box-shadow: inset 0 1px 1px rgba(0,0,0,.075),0 0 8px rgba(44,200,145,.6);}
.text-red{color:red;}
.text-green{color:green;}
.text-grey{color:#a7a7a7 !important;}
.text-theme{color:#2cc891;}

/* Comment settings */
.lity-container{background-color:white;}
.lity{background-color:rgba(0, 0, 0, 0.5);}
